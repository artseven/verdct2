<!-- ASSIGN CONTROLLER -->
<div ng-app="savedEvent" ng-controller="savedEventController">
        <div class="container" id="cusec">
        <!-- HEADER AND SAVED EVENT COUNT -->
        <div class="text-center">
            <h1>Your events: <span class="label label-info" id="cuse">{{ savedEvents.length }}</span></h1>
        </div>
        <!-- EVENT LIST -->
        <div id="todo-list" class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <!-- LOOP OVER EVENTES IN $scope.savedEvents -->
                <div ng-repeat="savedEvent in savedEvents">
                    <label>
                        <input type="checkbox" ng-click="deleteEvent(savedEvent._id)"> {{ savedEvent.e_name }}
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>