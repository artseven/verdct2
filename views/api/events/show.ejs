<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <div class="container">
      <header>
        <% include ../../partials/navbar %>
        <% include ../../partials/header %>
      </header>
    </div>

      <div class="container">
        <h1><%= event.name %></h1>
         <a href="/api/events/<%= event.id %>/edit" class="margined">Edit</a>
         <a href="/api/events/<%= event.id %>/shortlist" class="margined">MY SHORTLIST</a>
      </div>
      
    <h1>Showing all users with dresses registered for this event:</h1>
    <% for(var i = 0; i < savedEvents.length; i++){ 
          if (savedEvents[i].dress_id != undefined){ %>
      <p><a href="/api/savedEvents/<%= savedEvents[i]._id %>"><%= savedEvents[i].u_name %></a></p>
      <p><%= savedEvents[i].d_name %></p>
      <p><%= savedEvents[i].d_img %></p>
      <p><%= savedEvents[i].brand %></p>
      <p><%= savedEvents[i].cost %></p>
      <p><%= savedEvents[i].sTop %></p>
      <p><%= savedEvents[i].sBot %></p>
      <p><%= savedEvents[i].colour %></p>
    <% }} %>

    <form action="/api/events/<%= event.id %>" method="post" enctype="application/x-www-form-urlencoded" class="margined">
      <input type="hidden" value="DELETE" name="_method"/>
      <button type="submit" class="btn-lg btn-primary btn-centre">Delete This Event</button>
    </form>

</body>
</html>